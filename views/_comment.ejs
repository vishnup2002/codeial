<li id="comment-<%= comment.id%>">
    <p><%= comment.content%><br>
    <span><%=comment.user.name%></span>
        <% if (locals.user && locals.user.id == comment.user.id){%>
        <a href="/comment/destroy/<%= comment.id %>" class="delete-comment-button">
            X
        </a>
        <%}%>
    </p>
</li>