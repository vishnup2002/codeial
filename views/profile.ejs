<section>

    <img src="<%= profile_user.avatar%>" alt="<%= profile_user.name%>" width="150px">
    
    <%if (locals.user.id == profile_user.id){%>
        <form action="/user/update/<%= profile_user.id%>" enctype="multipart/form-data" method="POST">
            <input type="text" name="name" id="" value="<%= user.name%>" required>
            <input type="email" name="email" id="" value="<%= user.email%>" required>
            <input type="file" name="avatar" id="" placeholder="Profile Picture">
            <input type="submit" value="Update">
        </form>

    <%}else{%>
        <h1><%=profile_user.name%></h1>
        <h3><%=profile_user.email%></h3>
    <%}%>
    
</section>